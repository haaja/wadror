<p id="notice"><%= notice %></p>

<h1><%= @beer_club.name %> </h1>

<p>
  <strong><%= @beer_club.city %> </strong>
</p>

<p>Founded: <%= @beer_club.founded %></p>

<p>
    <h2>Members</h2> <ul>
      <% @beer_club.memberships.each do |member| %>
          <li>
            <%= link_to member.user.username, user_path(member.user_id) %>
          </li>
      <% end %>
    </ul>
</p>

<%= link_to('Edit', edit_beer_club_path(@beer_club)) if current_user %>
<%= link_to('Destroy the club', @beer_club, method: :delete, data: { confirm: 'Are you sure?' }) if current_user.admin? %>
<%= link_to 'Back', beer_clubs_path %>
